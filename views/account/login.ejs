<h1 class="title-login">
    <%= title %>
</h1>

<!-- Display Flash msg -->
<%- messages() %>
<% let errors %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" class="login-form">
        <label for="account_email">Email Address:<span class="red-star">*</span></label>
        <input type="email" id="account_email" name="account_email" required>
    
        <label for="account_password">Password:<span class="red-star">*</span></label>
        <input type="password" id="account_password" name="account_password"
            required>
    
        <button type="submit" class="login-btn">Login</button>
    </form>
    <!-- Registration Link -->
    <p>Don't have an account? <a href="/account/register">Register here</a></p> <!-- refer client back to register form -->
    