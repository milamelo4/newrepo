<h1 class="title-login">
    <%= title %>
</h1>

<!-- Display Flash msg -->
<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

        <p>You're logged in...</p>