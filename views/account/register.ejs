<h1 class="title-register">
    <%= title %>
</h1>

<!-- Display Flash msg -->


<!-- Registration Form -->
<form action="/account/register" method="POST" class="register-form">
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required>

    <label for="account_email">Email Address:</label>
    <input type="email" id="account_email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" placeholder="Min 12 chars, 1 capital, 1 number, 1 special char"
        required>

    <label for="check-box">Receive Newsletter</label>
    <input type="checkbox" name="check-box" id="check-box">    
    <button type="button" onclick="togglePassword()">Show/Hide</button>
    <button type="submit">Register</button>
</form>