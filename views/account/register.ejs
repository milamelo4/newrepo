<h1 class="title-register">
    <%= title %>
</h1>

<!-- Display Flash msg -->
<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
<% } %>

<!-- Registration Form -->
<form action="/account/register" method="POST" class="register-form">
    <label for="account_firstname">First Name:<span class="red-star">*</span></label>
    <input type="text" id="account_firstname" name="account_firstname" required value="<%= locals.account_firstname %>">

    <label for="account_lastname">Last Name:<span class="red-star">*</span></label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">

    <label for="account_email">Email Address:<span class="red-star">*</span></label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">

    <label for="account_password">Password:<span class="red-star">*</span></label>

    <div>
        <input type="password" id="account_password" name="account_password" 
        required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    </div>

    <button type="submit" class="register-btn">Register</button>
    <button type="submit" class="login-btn"><a href="/account/login">Login</a></button>
</form>